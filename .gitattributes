# Default for all
* text=auto

# Documentation
*.md text diff=markdown eol=crlf
*.toml text diff=toml eol=lf export-ignore
*.txt text diff=txt eol=lf

# Scripts
*.sh text diff=sh eol=lf
*.ps1 text diff=ps1 eol=lf

# Python
*.py text diff=python eol=lf
*.ipynb text diff=ipynb eol=lf

# Git attributes
.gitignore text eol=lf diff=gitignore export-ignore
.gitattributes text eol=lf diff=gitattributes export-ignore
.gitmodules text eol=lf diff=gitmodules export-ignore

# Workflows
tests/ export-ignore
/.github export-ignore
CHANGELOG.md export-ignore

